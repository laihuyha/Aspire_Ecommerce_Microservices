{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "postgresUsername": {
      "type": "parameter.v0",
      "value": "{postgresUsername.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "postgresPassword": {
      "type": "parameter.v0",
      "value": "{postgresPassword.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "catalog-postgres": {
      "type": "container.v0",
      "connectionString": "Host={catalog-postgres.bindings.tcp.host};Port={catalog-postgres.bindings.tcp.port};Username={postgresUsername.value};Password={postgresPassword.value}",
      "image": "docker.io/postgres:16-alpine",
      "volumes": [
        {
          "name": "catalog_data",
          "target": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "{postgresUsername.value}",
        "POSTGRES_PASSWORD": "{postgresPassword.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        },
        "catalogDb": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "port": 5433,
          "targetPort": 5432
        }
      }
    },
    "catalogDb": {
      "type": "value.v0",
      "connectionString": "{catalog-postgres.connectionString};Database=catalogDb"
    },
    "distributedcache": {
      "type": "container.v0",
      "connectionString": "{distributedcache.bindings.tcp.host}:{distributedcache.bindings.tcp.port},password={distributedcache-password.value}",
      "image": "docker.io/redis:7-alpine",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "redis-server --requirepass $REDIS_PASSWORD --save 300 100",
        "--maxmemory",
        "128mb",
        "--maxmemory-policy",
        "allkeys-lru"
      ],
      "volumes": [
        {
          "name": "redis_data",
          "target": "/data",
          "readOnly": false
        }
      ],
      "env": {
        "REDIS_PASSWORD": "{distributedcache-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        },
        "redis": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        }
      }
    },
    "catalog-api": {
      "type": "project.v0",
      "path": "../../../Services/Catalog/API/Catalog.API.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{catalog-api.bindings.http.targetPort};{catalog-api.bindings.catalog-http.targetPort}",
        "HTTPS_PORTS": "{catalog-api.bindings.catalog-https.targetPort}",
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_HTTP_PORTS": "8080",
        "ASPNETCORE_HTTPS_PORTS": "8081",
        "ConnectionStrings__catalogDb": "{catalogDb.connectionString}",
        "ConnectionStrings__distributedcache": "{distributedcache.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        },
        "catalog-http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 6000,
          "targetPort": 8080
        },
        "catalog-https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "port": 6060,
          "targetPort": 8081
        }
      }
    },
    "distributedcache-password": {
      "type": "parameter.v0",
      "value": "{distributedcache-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "special": false
            }
          }
        }
      }
    }
  }
}