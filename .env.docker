# ======================================-
# DOCKER ENVIRONMENT
# Docker container deployment settings
# ======================================-

# ---------------------------
# INFRASTRUCTURE SETTINGS
# ---------------------------

POSTGRES_USERNAME=${POSTGRES_USER:-postgres}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_PORT=5432

REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_PORT=6379
REDIS_COMMANDER_USERNAME=${REDIS_COMMANDER_USER:-admin}
REDIS_COMMANDER_PASSWORD=${REDIS_COMMANDER_PASSWORD}
REDIS_COMMANDER_PORT=7001

# ---------------------------
# CATALOG API SETTINGS
# ---------------------------

CATALOG_HTTP_PORT=${CATALOG_HTTP_PORT:-6000}
CATALOG_HTTPS_PORT=${CATALOG_HTTPS_PORT:-6060}

# ---------------------------
# ASP.NET ENVIRONMENT
# ---------------------------

ASPNETCORE_ENVIRONMENT=Docker
ASPNETCORE_HTTP_PORTS=8080
ASPNETCORE_HTTPS_PORTS=8081

# ---------------------------
# SECURITY SETTINGS
# ---------------------------

CORS_ORIGINS=https://*,http://*
ALLOWED_HOSTS=*

# ---------------------------
# MONITORING & LOGGING
# ---------------------------

LOG_LEVEL_DEFAULT=Information
LOG_LEVEL_ASPNETCORE=Warning

# ---------------------------
# DOCKER SPECIFIC
# ---------------------------

DOCKER_REGISTRY=${DOCKER_REGISTRY:-catalog}
TAG=${TAG:-latest}
POSTGRES_DB=${POSTGRES_DB:-CatalogDB}
